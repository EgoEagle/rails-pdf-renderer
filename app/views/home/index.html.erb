<%= form_for :info, class: "sform", url: "home/submit", data: { turbo: false } do |form| %>
     <div class = "form-group test">
          <%= form.label :Name, style: "border: 1px solid pink;" %>
          <%= form.text_field :name, class: "form-control" %>
     </div>
     <div class = "form-group">
          <%= form.label :Report_ID, "Report ID" %>
          <%= form.text_field :number, placeholder: "Report ID", class: "form-control" %>
     </div>
          <div class = "form-group">
          <%= form.label :Date_Completed , "Date Completed" %>
          <%= form.text_field :date_completed, class: "form-control" %>
     </div>
     <div class = "form-group">
          <%= form.select :certificate_name, ["Carpentry Level One", "Industrial Pipefitter", "Scaffold Builder"], class: "form-control" %>
          <%= form.select :type, ["Performance Report", "Assessment Report", "Certificate"], class: "form-control" %> <br>
     </div>

     <div class = "form-group">
     <%= form.label :Direct %>
     <%= form.label :Direct, "Yes", value: "true" %>
     <%= form.radio_button :Direct, true %>
     <%= form.label :Direct, "No", value: "false" %>
     <%= form.radio_button :Direct, false, checked: true %> <br>
     </div>
     <%= form.submit "Submit", class: "btn btn-primary" %>
     
<% end %>