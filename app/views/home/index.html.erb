<%= form_for :info, class: "sform form-group", url: "home/submit", data: { turbo: false } do |form| %>
     <div class = "form-group test">
          <%= form.label :Name, style: "border: 1px solid pink;" %>
          <%= form.text_field :name, class: "form-control-sm" %>
     </div>
     <div class = "form-group">
          <%= form.label :Report_ID, "Report ID" %>
          <%= form.text_field :number, placeholder: "Report ID", class: "form-control-sm" %>
     </div>
          <div class = "form-group">
          <%= form.label :Date_Completed, "Date Completed" %>
          <%= form.text_field :date_completed, class: "form-control-sm" %>
     </div>
     <div class = "form-group">
          <%= form.label :Type, "Type" %>
          <%= form.select :type, [["Performance Report", { :id => "performance_report" }], ["Assessment Report", { :id => "assessment_report" }], ["Certificate", { :id => "certificate" }]], {}, :onchange => "yesnoCheck();" %>
          
     </div>
     <div class = "form-group">
          <%= form.label :Certificate_name, "Certificate Name" %>
          <%= form.select :certificate_name, ["Carpentry Level One", "Industrial Pipefitter", "Scaffold Builder"], class: "form-control" %> <br>
     </div>

     <div class = "form-group">
          <%= form.label :Direct %>
          <%= form.label :Direct, "Yes", value: "true" %>
          <%= form.radio_button :Direct, true %>
          <%= form.label :Direct, "No", value: "false" %>
          <%= form.radio_button :Direct, false, checked: true %> <br>
     </div>

     <%# <select onchange="yesnoCheck()">
          <option id="yesCheck"  value="Performance Report">Performance Report</option>
          <option id="yesCheck" value="Assessment Report">Assessment Report</option>
          <option id="noCheck" value="Certificate">Certificate</option>
     </select> %>

     <div id="ifYes" style="display: none;">
          <%= form.label :Certificate_name, "Certificate Name" %>
          <%= form.select :certificate_name, ["Carpentry Level One", "Industrial Pipefitter", "Scaffold Builder"], class: "form-control" %> <br>
     </div>
     </div>         
     <script type="text/javascript">
          function yesnoCheck() {
               if (document.getElementById("assessment_report").selected || document.getElementById("performance_report").selected) {
                    document.getElementById("ifYes").style.display = "block";
               } else {
                    document.getElementById("ifYes").style.display = "none";
               }
          }
     </script>
     <%= form.submit "Submit", :class => "btn btn-primary" %>
<% end %>